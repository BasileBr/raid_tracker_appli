<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/Blancnacre"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/VertPrimaire"
        android:focusable="true"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="208dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:background="@drawable/rt_basev2"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/Blancnacre"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/MarronPrimaire"
            android:textSize="20dp"
            android:text="@string/bievenue"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- backdoor
            //android:onClick="asupprimer"-->
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/inscription"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@color/MarronPrimaire"
                android:onClick="createAccount"
                android:textColor="@color/Blancnacre"
                android:text="@string/input_inscription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ou"
                android:layout_marginStart="30dp"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/connexion"
                android:layout_marginStart="30dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/MarronPrimaire"
                android:textColor="@color/Blancnacre"
                android:onClick="Connexion"
                android:text="@string/input_connexion" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blancnacre"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/listeraid"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur2" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/myImageView"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/description"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_alignEnd="@+id/myImageView"
                    android:layout_alignBottom="@+id/myImageView"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:onClick="join"
                    android:text="@string/join"
                    android:textColor="@color/Blancnacre" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur2" />

                <TextView
                    android:id="@+id/myImageViewText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/myImageView2"
                    android:layout_alignTop="@+id/myImageView2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/description"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/myImageView2"
                    android:layout_alignEnd="@+id/myImageView2"
                    android:layout_alignBottom="@+id/myImageView2"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:onClick="join"
                    android:text="@string/join"
                    android:textColor="@color/Blancnacre" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur2" />

                <TextView
                    android:id="@+id/myImageViewText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/myImageView3"
                    android:layout_alignTop="@+id/myImageView3"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/description"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/myImageView3"
                    android:layout_alignEnd="@+id/myImageView3"
                    android:layout_alignBottom="@+id/myImageView3"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:onClick="join"
                    android:text="@string/join"
                    android:textColor="@color/Blancnacre" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ListeRaid">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>