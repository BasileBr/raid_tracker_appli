<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:hint="@string/input_login"
            android:text="@string/input_username" />

        <EditText
            android:id="@+id/password"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:inputType="textPassword"
            android:text="@string/input_password" />

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:onClick="login"
            android:text="@string/input_login" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/myImageView"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="82dp"
                    android:text="Raid aventure
 Rejoignez l'aventure"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_alignBottom="@+id/myImageView"
                    android:layout_alignEnd="@+id/myImageView"
                    android:onClick="login"
                    android:text="@string/join" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur" />

                <TextView
                    android:id="@+id/myImageViewText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/myImageView2"
                    android:layout_alignTop="@+id/myImageView2"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="82dp"
                    android:text="Raid aventure
 Rejoignez l'aventure"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:layout_alignTop="@+id/myImageView2"
                    android:layout_alignBottom="@+id/myImageView2"
                    android:layout_alignEnd="@+id/myImageView2"
                    android:onClick="login"
                    android:text="@string/join" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur" />

                <TextView
                    android:id="@+id/myImageViewText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/myImageView3"
                    android:layout_alignTop="@+id/myImageView3"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="82dp"
                    android:text="Raid aventure
 Rejoignez l'aventure"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:layout_alignTop="@+id/myImageView3"
                    android:layout_alignBottom="@+id/myImageView3"
                    android:layout_alignEnd="@+id/myImageView3"
                    android:onClick="login"
                    android:text="@string/join" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>