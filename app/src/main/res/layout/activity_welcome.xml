<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/VertPrimaire"
        android:focusable="true"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start">

            <EditText
                android:id="@+id/username"
                android:layout_width="82dp"
                android:layout_height="38dp"
                android:background="@null"
                android:drawableStart="@drawable/client"
                android:drawablePadding="5dp"
                android:hint="@string/input_login"
                android:inputType="text"
                android:text="@string/input_username" />

            <EditText
                android:id="@+id/password"
                android:layout_width="82dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:drawableStart="@drawable/cadena"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:text="@string/input_password" />

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="77dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:onClick="login"
                android:text="@string/input_login" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <Button
                android:id="@+id/inscription"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="start"
                android:onClick="createAccount"
                android:text="@string/input_inscription" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/text"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_gravity="left"
        android:background="@color/Blancnacre"
        android:gravity="left"
        android:text="@string/motdepasseoublie"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Blancnacre"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/myImageView"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="82dp"
                    android:text="@string/description"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_alignBottom="@+id/myImageView"
                    android:layout_alignEnd="@+id/myImageView"
                    android:onClick="join"
                    android:textColor="@color/white"
                    android:text="@string/join" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur" />

                <TextView
                    android:id="@+id/myImageViewText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/myImageView2"
                    android:layout_alignTop="@+id/myImageView2"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="82dp"
                    android:text="@string/description"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:layout_alignTop="@+id/myImageView2"
                    android:layout_alignBottom="@+id/myImageView2"
                    android:layout_alignEnd="@+id/myImageView2"
                    android:textColor="@color/white"
                    android:onClick="join"
                    android:text="@string/join" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/myImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:alpha=".75"
                    android:cropToPadding="true"
                    android:src="@drawable/coureur" />

                <TextView
                    android:id="@+id/myImageViewText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/myImageView3"
                    android:layout_alignTop="@+id/myImageView3"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="82dp"
                    android:text="@string/description"
                    android:textColor="#000000" />


                <Button
                    android:id="@+id/join3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#4D000000"
                    android:layout_alignTop="@+id/myImageView3"
                    android:layout_alignBottom="@+id/myImageView3"
                    android:layout_alignEnd="@+id/myImageView3"
                    android:textColor="@color/white"
                    android:onClick="join"
                    android:text="@string/join" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>