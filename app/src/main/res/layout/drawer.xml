<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blancnacre"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/MarronPrimaire"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adraid"
        android:background="@color/VertPrimaire"
        android:layout_gravity="center"
        android:onClick="CreateCourse"
        android:text="@string/Ajoutraid"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dec"
        android:layout_marginTop="10dp"
        android:background="@color/VertPrimaire"
        android:layout_gravity="center"
        android:onClick="logout"
        android:text="@string/Deconnexion"/>


</LinearLayout>

