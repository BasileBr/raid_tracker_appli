<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context=".CreateCourse"
    android:background="@color/Blancnacre">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
            android:id="@+id/text2"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_raid"
            android:layout_marginEnd="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name_raid"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Raid Aventure"
            />


        <TextView
            android:id="@+id/text3"
            android:layout_marginTop="20dp"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de l'évènement "
            android:layout_marginEnd="10dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:id="@+id/tvDate"
            />


        <TextView
            android:id="@+id/text4"
            android:layout_marginTop="20dp"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lieu de l'évènement"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/lieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lannion"
            />

        <TextView
            android:id="@+id/text6"
            android:layout_marginTop="20dp"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'équipe organisatrice"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/organizer_teame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Team ENSSAT"
            />


        <TextView
            android:id="@+id/text5"
            android:layout_marginTop="20dp"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de sport"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/createAccount"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"

                android:layout_marginEnd="50dp"
                android:text="@string/valide" />
            <!--android:onClick="login"-->

            <Button
                android:id="@+id/cancel"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="cancel"
                android:text="@string/cancel" />


        </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>