<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout3"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@color/Blancnacre">
    <!--tools:context=".CreateCourse"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/VertPrimaire"
            android:minHeight="?attr/actionBarSize"
            app:title="Ceci est un test"

             />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left">
        <include layout="@layout/drawer"/>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
            android:id="@+id/text2"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/name_raid"
            android:layout_marginEnd="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name_raid"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Raid Aventure"
            />


            <TextView
                android:id="@+id/text4"
                android:layout_marginTop="20dp"
                android:color="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu de l'évènement"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/lieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lannion"
                />

        <TextView
            android:id="@+id/text3"
            android:layout_marginTop="20dp"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de l'évènement "
            android:layout_marginEnd="10dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:id="@+id/tvDate"
            />

            <TextView
                android:id="@+id/text7"
                android:layout_marginTop="20dp"
                android:color="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edition"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/edition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edition"
                />



            <TextView
            android:id="@+id/text6"
            android:layout_marginTop="20dp"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'équipe organisatrice"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/organizer_teame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Team ENSSAT"
            />

         <!--<LinearLayout-->
             <!--android:layout_width="match_parent"-->
             <!--android:layout_height="match_parent"-->
             <!--android:orientation="horizontal">-->

         <!--</LinearLayout>-->

            <ScrollView
                android:layout_width="250dp"
                android:layout_height="150dp"
                >

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:id="@+id/checkbox"
                    android:layout_height="wrap_content">


                    <CheckBox android:id="@+id/checkbox_meat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kayak"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_cheese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="badmintonanaconda"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_meat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kayak"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_cheese1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test2"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_meat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kayak"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_cheese2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test2"
                    android:onClick="onCheckboxClicked"/>
                <CheckBox android:id="@+id/checkbox_meat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kayak"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_cheese3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test2"
                    android:onClick="onCheckboxClicked"/>
        </LinearLayout>
            </ScrollView>

        <!--<TextView-->
            <!--android:id="@+id/text5"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:color="@color/black"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Type de sport"-->
            <!--android:textSize="18sp" />-->

        <!--<Spinner-->
            <!--android:id="@+id/spinner"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/createAccount"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:text="@string/valide" />
            <!--android:onClick="login"-->

            <Button
                android:id="@+id/cancel"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="cancel"
                android:text="@string/cancel" />


        </LinearLayout>
        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>