<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout3"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_gravity="center"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:background="@color/Blancnacre">
    <!--tools:context=".CreateCourse"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/VertPrimaire"
            android:minHeight="?attr/actionBarSize"
            app:title="Creation d'un Raid"

             />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
            android:id="@+id/text2"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/name_raid"
            android:layout_marginEnd="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/name_raid"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Raid Aventure"
            />


            <TextView
                android:id="@+id/text4"
                android:layout_marginTop="20dp"
                android:color="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu de l'évènement"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/lieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lannion"
                />

        <TextView
            android:id="@+id/text3"
            android:layout_marginTop="20dp"
            android:color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de l'évènement "
            android:layout_marginEnd="10dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            style="@android:style/Widget.EditText"
            android:layout_height="wrap_content"
            android:hint="@string/date"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:textSize="18sp"
            android:id="@+id/selectdate"
            />

            <TextView
                android:id="@+id/text7"
                android:layout_marginTop="20dp"
                android:color="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edition"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/edition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edition"
                />



            <TextView
                android:id="@+id/text6"
                android:layout_marginTop="20dp"
                android:color="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de l'équipe organisatrice"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/organizer_team"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Team ENSSAT"
                />


            <TextView
                android:layout_width="match_parent"
                style="@android:style/Widget.EditText"
                android:id="@+id/choosesport"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:text="Choisissez les sports" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:columnCount="2"
                android:rowCount="5">

                <TextView
                    android:layout_column="0"
                    android:id="@+id/sports"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:textSize="15sp"
                    android:text="Les sports" />

                <TextView
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:text="Les surfaces" />

                <CheckBox
                    android:id="@+id/checkbox_kayak"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kayak"
                    android:onClick="onCheckboxClicked"/>

                    <CheckBox
                    android:id="@+id/checkbox_water"
                    android:layout_column="1"
                    android:layout_marginTop="5dp"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:text="Milieu aquatique"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:id="@+id/checkbox_natation"
                    android:layout_marginTop="5dp"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Natation"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:id="@+id/checkbox_velo"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vélo"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:id="@+id/checkbox_terre"
                    android:layout_column="1"
                    android:layout_marginTop="5dp"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:text="Milieu terrestre"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox
                    android:id="@+id/checkbox_coursepied"
                    android:layout_column="0"
                    android:layout_marginTop="5dp"
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_rowWeight="1"
                    android:text="Course à pied"
                    android:onClick="onCheckboxClicked"/>

            </GridLayout>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal">


            <!--android:onClick="login"-->

            <Button
                android:id="@+id/cancel"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:onClick="cancel"
                android:layout_marginStart="10dp"
                android:text="@string/cancel" />


            <Button
                android:id="@+id/createAccount"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/cancel"
                android:onClick="createnewraid"
                android:text="@string/valide" />


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>