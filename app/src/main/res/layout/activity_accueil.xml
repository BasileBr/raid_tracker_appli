<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blancnacre"
    android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/VertPrimaire"
            android:minHeight="?attr/actionBarSize"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="@string/Home"/>-->
                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rt_basev2"/>


            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/MarronPrimaire"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/presentation"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/addrmail"
                    android:layout_marginTop="40dp"
                    android:layout_width="300dp"
                    android:drawablePadding="5dp"
                    android:layout_height="50dp"
                    android:inputType="textEmailAddress"
                    android:hint="@string/input_mail"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/client"
                    android:background="@drawable/border"

                    />


                <EditText
                    android:id="@+id/passwordconnexion"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:inputType="textPassword"
                    android:hint="@string/input_password"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/cadena"
                    android:drawablePadding="5dp"
                    />

                <!--<TextView-->
                    <!--android:id="@+id/forget_password"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:textSize="20dp"-->
                    <!--android:text="@string/motdepasseoublie"/>-->


                <Button
                    android:id="@+id/connexion"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:onClick="login"
                    android:textColor="@color/Blancnacre"
                    android:background="@color/MarronPrimaire"
                    android:text="@string/connexion" />


                <TextView
                    android:id="@+id/createAccount"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_marginTop="13dp"
                    android:onClick="createAccount"
                    android:textSize="20dp"
                    android:text="@string/create_account"
                    android:layout_margin="20dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

